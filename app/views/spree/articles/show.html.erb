<% content_for :sidebar do %>
  <%= render partial: 'spree/articles/sidebar_show' %>
<% end %>

<div id="blog_entry_container">
  <div id="blog_entry_entry">
    <h1><%= @article.title %></h1>

    <div class="blog_entry_body">
      <%== @article.body %>
    </div>

    <%= render partial: 'spree/articles/article_details', locals: { article: @article } %>
  </div>
</div> 
