<div id="main-page-header" class="page-header">
	<h4>Shop All <%= Spree.t( :products ) %></h4>
</div>

<div id="featured" class="col-sm-12">
	<div class="row">
		<div id="col-left" class="col-sm-6">
			<%= image_tag @featured_large.attachment.url( :featured_large ), alt: @featured_large.alt_text.presence || nil, class: 'img-responsive img-thumbnail' %>
		</div>

		<div id="col-right" class="col-sm-6">
			<div class="row">
				<div id="col-right-left" class="col-sm-6">
					<%= image_tag @featured_small.attachment.url( :featured_small ), alt: @featured_small.alt_text.presence || nil, class: 'img-responsive img-thumbnail' %>
				</div>

				<div id="col-right-right" class="col-sm-6">
					<div class="list-group">
						<%= link_to '#', class: 'list-group-item active' do %>
							NMTx Particles <span class="glyphicon glyphicon-chevron-right"></span>
						<% end %>

						<%= link_to '#', class: 'list-group-item active' do %>
							NMTx Reagents <span class="glyphicon glyphicon-chevron-right"></span>
						<% end %>

						<%= link_to '#', class: 'list-group-item active' do %>
							Other Featured Product(s) <span class="glyphicon glyphicon-chevron-right"></span>
						<% end %>

						<%= link_to '#', class: 'list-group-item active' do %>
							New Products <span class="glyphicon glyphicon-chevron-right"></span>
						<% end %>

						<%= link_to '#', class: 'list-group-item active' do %>
							Promotions <span class="glyphicon glyphicon-chevron-right"></span>
						<% end %>
					</div>
				</div>
			</div>

			<div class="row">
				<div id="col-right-bottom" class="col-sm-12">
					<%= image_tag @featured_wide.attachment.url( :featured_wide ), alt: @featured_wide.alt_text.presence || nil, class: 'img-responsive img-thumbnail' %>
				</div>
			</div>
		</div>
	</div>
</div>
