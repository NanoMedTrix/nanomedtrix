<div class="row">
	<div class="col-xs-8 col-xs-offset-2 col-sm-10 col-sm-offset-1 col-lg-8 col-lg-offset-2">
		<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path, html: { class: 'form-horizontal' } do | f | %>
			<div class="form-group">
				<%= f.label       :email, Spree.t( :email ) %>
				<%= f.email_field :email, class: 'form-control', placeholder: 'Email', tabindex: 1 %>
			</div>

			<div class="form-group">
				<%= f.label          :password, Spree.t( :password ) %>
				<%= f.password_field :password, class: 'form-control', placeholder: 'Password', tabindex: 2 %>
			</div>

			<div class="clearfix">
				<%= f.submit Spree.t( :login ), class: 'btn btn-primary pull-right', tabindex: 3 %><br>
			</div>
			
			<div class="form-group">
				<div class="checkbox pull-right">
					<label><%= f.check_box :remember_me %> Remember me</label>
				</div>
			</div>

			<div id="forgot-password" class="form-group">
				<%= link_to Spree.t( :forgot_password ), spree.recover_password_path, class: 'btn btn-link' %> 
			</div>
		<% end %>
	</div>
</div>