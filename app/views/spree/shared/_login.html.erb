<div class="row">
	<div class="col-sm-12 col-md-11">
		<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path, html: { class: 'form-horizontal' } do | f | %>
			<div class="form-group">
				<%= f.label :email, Spree.t( :email ), class: 'col-sm-2 col-md-3 control-label' %>

				<div class="col-sm-10 col-md-9">
					<%= f.email_field :email, class: 'form-control', placeholder: 'Email', tabindex: 1 %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :password, Spree.t( :password ), class: 'col-sm-2 col-md-3 control-label' %>

				<div class="col-sm-10 col-md-9">
					<%= f.password_field :password, class: 'form-control', placeholder: 'Password', tabindex: 2 %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-10 col-sm-offset-2 col-md-9 col-md-offset-3">
					<div class="checkbox">
						<label><%= f.check_box :remember_me %> Remember me</label>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-10 col-sm-offset-2 col-md-9 col-md-offset-3">
					<%= f.submit Spree.t( :login ), class: 'btn btn-primary', tabindex: 3 %>
					<%= link_to Spree.t( :forgot_password ), spree.recover_password_path, class: 'btn btn-link' %> 
				</div>
			</div>
		<% end %>
	</div>
</div>