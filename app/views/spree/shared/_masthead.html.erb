<div class="masthead" role="banner">
	<div class="row">
		<div id="masthead-left" class="col-lg-8">
			<h3>
				<%= image_tag 'store/nmtx-2.svg', id: 'logo' %>
				NMTx <small>Small particles for a large contrast</small>
			</h3>
		</div>

		<div class="clearfix visible-xs"></div>

		<div id="masthead-right" class="col-lg-4">
			<%= render 'spree/shared/search' %>
		</div>
	</div>

	<ul id="navigation" class="nav nav-justified" role="navigation">
		<li><%= link_to 'Home', spree.root_path %></li>
		<li><%= link_to 'Technology', '#' %></li>
		<li><%= link_to 'Gallery', '#' %></li>
		<li><%= link_to 'Products', spree.products_path %></li>
	</ul>
</div>
