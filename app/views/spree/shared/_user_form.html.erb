<div class="row">
  <div class="col-sm-12 col-md-11">
    <%= form_for resource, as: :spree_user, url: spree.registration_path( @user ), html: { class: 'form-horizontal' } do | f | %>
      <div class="form-group">
        <%= f.label :email, Spree.t( :email ), class: 'col-sm-2 col-md-3 control-label' %>

        <div class="col-sm-10 col-md-9">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, Spree.t( :password ), class: 'col-sm-2 col-md-3 control-label' %>

        <div class="col-sm-10 col-md-9">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, Spree.t( :confirm_password ), class: 'col-sm-2 col-md-3 control-label' %>

        <div class="col-sm-10 col-md-9">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2 col-md-9 col-md-offset-3">
          <%= f.submit Spree.t( :create ), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
