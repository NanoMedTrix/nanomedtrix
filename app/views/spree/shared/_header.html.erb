<header>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="row">
				<div class="navbar-header">
					<div class="btn-group">
						<%= content_tag :button, image_tag( 'store/us.gif' ), type: 'button', class: 'navbar-toggle btn', disabled: 'disabled' %>
						<%= link_to spree.login_path, class: 'navbar-toggle btn' do %>
							<span class="glyphicon glyphicon-user"></span> <%= Spree.t( :login ) %>
						<% end %>
						<%= link_to_cart nil, "navbar-toggle btn" %>
						<%= content_tag :button, class: 'navbar-toggle btn', data: { toggle: 'collapse', target: '.navbar-collapse' } do %>
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						<% end %>
					</div>
				</div>

				<div class="navbar-collapse collapse">
					<ul id="header-nav-left" class="nav navbar-nav" data-hook>
						<li><%= link_to 'News', spree.news_path %></li>
					</ul>

					<ul id="header-nav-right" class="nav navbar-nav navbar-right hidden-xs">
						<li><a><%= image_tag 'store/us.gif' %></a></li>
						
						<% if spree_current_user %>
							<li>
								<%= link_to spree.account_path do %>
									<span class="glyphicon glyphicon-user"></span> <%= Spree.t( :my_account ) %>
								<% end %>
							</li>
							<li><%= link_to Spree.t( :logout ), spree.logout_path %></li>
						<% else %>
							<li><%= link_to "#{ Spree.t( :new_customer ) }? Sign up!", spree.signup_path %></li>
							<li>
								<%= link_to spree.login_path do %>
									<span class="glyphicon glyphicon-user"></span> <%= Spree.t( :login ) %>
								<% end %>
							</li>
						<% end %>
						
						<li><%= link_to_cart %></li>
					</ul>
				</div>
			</div>
		</div>
	</nav>
</header>
