<div class="news_article_details">
  <%= Spree.t( :posted_on ) %> <span class="news_article_date"><%= l( news_article.published_at, format: :news_date ) %></span>

  <% unless news_article.author.blank? %>
    <%= Spree.t( :by ) %> <%= link_to news_article.author.email, '#', class: 'news_article_author' %>
  <% end %>.

  <% unless news_article.category_list.empty? %>
    <%= Spree.t( :posted_in ) %> <%= news_article_category_list_html news_article %>.
  <% end %>

  <% unless news_article.tag_list.empty? %>
    <%= Spree.t( :tagged ) %> <%= news_article_tag_list_html news_article %>.
  <% end %>
</div>
