<% content_for :page_actions do %>
	<li><%= button_link_to Spree.t( :back_to_banner_list), session[ :return_to ] || admin_banners_url, icon: 'icon-arrow-left' %></li>

	<li id="new_banner_link">
		<%= button_link_to Spree.t( :new_banner ), new_object_url, { icon: 'icon-plus', id: 'admin_new_banner' } %>
	</li>
<% end %>

<%= render partial: 'spree/admin/shared/banner_sub_menu' %>
<%= render partial: 'spree/shared/error_messages', locals: { target: @banner } %>

<%= form_for [ :admin, @banner ], method: :put, html: { multipart: true } do | f | %>
	<fieldset class="no-border-top">
		<%= render partial: 'form', locals: { f: f } %>
		<%= render partial: 'spree/admin/shared/edit_resource_links' %>
	</fieldset>
<% end %>
