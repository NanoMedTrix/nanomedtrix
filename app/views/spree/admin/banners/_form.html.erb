<div data-hook="admin_banner_form_fields" class="row">
  <div class="left eight columns alpha" data-hook="admin_banner_form_left">
    <%= f.field_container :category do %>
      <%= f.label            :category, raw( Spree.t( :category ) + content_tag( :span, ' *', class: 'required' ) ) %>
      <%= f.select           :category, @categories.invert, {}, class: 'select2 fullwidth' %>
      <%= f.error_message_on :category %>
    <% end %>
    
    <%= f.field_container :url do %>
      <%= f.label            :url, raw( Spree.t( :url ) ) %>
      <%= f.text_field       :url, class: 'fullwidth title' %>
      <%= f.error_message_on :url %>
    <% end %>
  </div>

  <div class="right eight columns omega" data-hook="admin_banner_form_right">
    <% unless f.object.new_record? %>
      <div data-hook="thumbnail" class="field alpha two columns">
        <%= f.label Spree.t( :thumbnail ) %><br>
        <%= link_to image_tag( @banner.attachment.url( :mini ) ), @banner.attachment.url( :small ) %>
      </div>
    <% end %>

    <%= f.field_container :attachment do %>
      <%= f.label            :attachment, Spree.t( :attachment ) %><br />
      <%= f.file_field       :attachment %>
      <%= f.error_message_on :attachment %>
    <% end %>

    <div class="clear"></div>

    <%= f.field_container :alt_text do %>
      <%= f.label            :alt_text, Spree.t( :alt_text ) %>
      <%= f.text_field       :alt_text, class: 'fullwidth' %>
      <%= f.error_message_on :alt_text %>
    <% end %>

    <%= f.field_container :caption do %>
      <%= f.label            :caption, Spree.t( :caption ) %>
      <%= f.text_field       :caption, { rows: '13', class: 'fullwidth' } %>
      <%= f.error_message_on :caption %>
    <% end %>

    <%= f.field_container :enabled do %>
      <%= f.check_box        :enabled %>
      <%= f.label            :enabled, Spree.t( :enabled ) %><br />
      <%= f.error_message_on :enabled %>
    <% end %>
  </div>

  <div class="clear"></div>

  <div data-hook="admin_banner_form_additional_fields"></div>

  <div class="clear"></div>
</div>

<% unless Rails.env.test? %>
  <script>
    $( '.select2-container' ).css({ width: '20em' });
  </script>
<% end %>
