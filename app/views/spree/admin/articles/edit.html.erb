<% content_for :page_title do %>
   <%= Spree.t( :articles ) %><i class="icon-arrow-right"></i> <%= Spree.t( :editing ) %> "<%= @article.title %>"
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t( :back ), spree.admin_articles_url, icon: 'icon-arrow-left' %></li>
<% end %>

<%= render partial: 'spree/admin/shared/content_sub_menu' %>
<%= render 'spree/shared/error_messages', target: @article %>

<%= form_for [ :admin, @article ] do | f | %>
  <%= render partial: f %>
  <%= render partial: 'spree/admin/shared/edit_resource_links' %>
<% end %>
